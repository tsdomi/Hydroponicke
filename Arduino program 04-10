int lightSensor = A0;
int lamp1 = 2;
int lamp2 = 3;
int lamp3 = 4; 
int lamp4 = 5;
int lampInGlasshouse = 6;
int lampOutGlasshouse = 7;




void setup() {
  pinMode(lamp1, OUTPUT);
  pinMode(lamp2, OUTPUT);
  pinMode(lamp3, OUTPUT);
  pinMode(lamp4, OUTPUT);
  pinMode(lampInGlasshouse, OUTPUT);
  pinMode(lampOutGlasshouse, OUTPUT);

  digitalWrite(lampOutGlasshouse, HIGH);
  digitalWrite(lamp2, HIGH);
  
  // put your setup code here, to run once:

}

void loop() {
  
  if(analogRead(lightSensor)>700){
    digitalWrite(lamp1, LOW);
    //digitalWrite(lamp2, LOW);
    digitalWrite(lamp3, LOW);
    digitalWrite(lamp4, LOW);
    digitalWrite(lampInGlasshouse, LOW);
  }else{
    digitalWrite(lamp1, HIGH);
    //digitalWrite(lamp2, HIGH);
    digitalWrite(lamp3, HIGH);
    digitalWrite(lamp4, HIGH);
    digitalWrite(lampInGlasshouse, HIGH);
  }
  delay(300000);
  // put your main code here, to run repeatedly:
  
}
