int lightSensor = A0;
int Z2 = 2;
int Z5 = 3;
int Z8 = 4; 
int Z11 = 5;
int Z14 = 6;
int Z15 = 7;




void setup() {
  pinMode(Z2, OUTPUT);
  pinMode(Z5, OUTPUT);
  pinMode(Z8, OUTPUT);
  pinMode(Z11, OUTPUT);
  pinMode(Z14, OUTPUT);
  pinMode(Z15, OUTPUT);


  //azok a lampak amiket nem kell feloltani soha
  digitalWrite(Z15, HIGH);
  digitalWrite(Z14, HIGH);
  digitalWrite(Z11, HIGH);
  //digitalWrite(Z5, HIGH);

  // put your setup code here, to run once:
  Serial.begin(9600);
}

void loop() {
  Serial.println(analogRead(lightSensor));
  if(analogRead(lightSensor)>700){ //azok a lampak amik feloltodnak, ha megfelelo a napfeny
    digitalWrite(Z2, LOW);
    digitalWrite(Z5, LOW); //ezek a lampakat nem kell most kapcsolni
    digitalWrite(Z8, LOW);
    //digitalWrite(Z11, LOW);
    //digitalWrite(Z14, LOW);
  }else{ //azok a lampak amiknek le kell kapcsolnia a ha nincs feny
    digitalWrite(Z2, HIGH);
    digitalWrite(Z5, HIGH); //ezek a lampakat nem kell most kapcsolni
    digitalWrite(Z8, HIGH);
    //digitalWrite(Z11, HIGH);
    //digitalWrite(Z14, HIGH);
  }
  delay(300000); //5 perces keszleltetes az erzekelesek kozott
  // put your main code here, to run repeatedly:
  
}
